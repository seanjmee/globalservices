<div class="jumbotron">
<h1>Listing projects <small>Global Services</small></h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Project name</th>
      <th>License type</th>
      <th>Complexity score</th>
      <th>Project description</th>
      <th>Budget days</th>
      <th>Project start</th>
      <th>Project end</th>
      <th>Estimated server count</th>
      <th>Estimated desktop count</th>
      <th>Account manager</th>
      <th>Project manager</th>
      <th>Technical lead</th>
      <th>Project status</th>
      <th>Project stage</th>
      <th>Client Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <% @linker = Comic.find(project.comic_id).title %>
    <% @str_date = project.project_start.to_s[0...10] %>
    <% @end_date = project.project_end.to_s[0...10] %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.license_type %></td>
        <td><%= project.complexity_score %></td>
        <td><%= project.project_description %></td>
        <td><%= project.budget_days %></td>
        <td><%= @str_date %></td>
        <td><%= @end_date %></td>
        <td><%= project.estimated_server_count %></td>
        <td><%= project.estimated_desktop_count %></td>
        <td><%= project.account_manager %></td>
        <td><%= project.project_manager %></td>
        <td><%= project.technical_lead %></td>
        <td><%= project.project_status %></td>
        <td><%= project.project_stage %></td>
        <td><%= @linker %> </td>
        <td> <div class="btn btn-small"> <%= link_to 'Show', project %> </div> </td>
        <td> <div class="btn btn-small"> <%= link_to 'Edit', edit_project_path(project) %> </div>  </td>
        <td> <div class="btn btn-small"> <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %> </div> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
</div>
