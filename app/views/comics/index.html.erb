
<div class="jumbotron" >

<div class="page-header" >
<h1>Client List <small>Global Services </small></h1>

<table class="table table-striped table-bordered table-condensed" >
  <thead>
    <tr>
       <th>Name</th> 
       <th>Contact Email</th> 
      <th>Location</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.email_address %></td>
        <td><%= comic.publisher %></td>
        <td> <div class="btn btn-small"> <%= link_to 'Show', comic %> </div> </td>
        <td> <div class="btn btn-small"> <%= link_to 'Edit', edit_comic_path(comic) %> </div>  </td>
        <td> <div class="btn btn-small"> <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %> </div> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="btn btn-large btn-primary"> <%= link_to 'New Client', new_comic_path %> </div>

