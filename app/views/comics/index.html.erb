<div class="hero-unit" >
<h1>Listing comics</h1>

<table class="table table-striped table-bordered table-condensed" >
  <thead>
    <tr>
       <th>Title</th> 
       <th>Issue</th> 
      <th>Publisher</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.issue %></td>
        <td><%= comic.publisher %></td>
        <td> <div class="btn btn-small"> <%= link_to 'Show', comic %> </div> </td>
        <td> <div class="btn btn-small"> <%= link_to 'Edit', edit_comic_path(comic) %> </div>  </td>
        <td> <div class="btn btn-small"> <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %> </div> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="btn btn-large btn-primary"> <%= link_to 'New Comic', new_comic_path %> </div>

